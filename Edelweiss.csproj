<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RollForward>Major</RollForward>
    <PublishReadyToRun>false</PublishReadyToRun>
    <TieredCompilation>false</TieredCompilation>
    <PublishDir>./Build/</PublishDir>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Diagnostics\**\*.cs" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="MonoMod" Version="22.7.31.1" />
    <PackageReference Include="MonoMod.RuntimeDetour" Version="25.3.0" />
    <PackageReference Include="MoonSharp" Version="2.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>
  <Target Name="RestoreDotnetTools" BeforeTargets="Restore">
    <Message Text="Restoring dotnet tools" Importance="High" />
    <Exec Command="dotnet tool restore" />
  </Target>

  <Target Name="PrepRelease" AfterTargets="Publish" Condition="'$(Configuration)' == 'Release'">
    <RemoveDir Directories="Release"/>
    <MakeDir Directories="$(ProjectDir)Release" />
    <Exec WorkingDirectory="$(ProjectDir)" Command="Tools\ProjectCompressor.exe $(ProjectDir) Release\Edelweiss.dll &quot;obj/.+ bin/.+ UI/.+ \..+/.+&quot; &quot;zip dll json lua py qss lang&quot;"/>
  </Target>
  <Target Name="BuildPython" AfterTargets="Publish" Condition="'$(Configuration)' == 'Release'">
    <PropertyGroup>
      <PythonPath>$(ProjectDir)\UI\.venv\Scripts\python.exe</PythonPath>
    </PropertyGroup>
    <Exec Command="$(PythonPath) -m PyInstaller --onefile &quot;$(ProjectDir)UI\main.py&quot;"/>
    <RemoveDir Directories="Build\main"/>
    <Delete Files="main.spec"/>
    <Copy SourceFiles="dist\main.exe" DestinationFolder="Release\"/>
    <Copy SourceFiles="Tools\ProjectDecompressor.exe" DestinationFolder="Release\"/>
    <RemoveDir Directories="dist"/>
  </Target>
</Project>