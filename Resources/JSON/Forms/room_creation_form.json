{
    "type": "QWidget",
    "id": "RoomCreationForm",
    "onsubmit": "@netcode('BUTTON_PRESSED')",
    "windowTitle": "Create room",
    "layout": {
        "type": "QVBoxLayout",
        "children": [
            {
                "type": "QLineEdit",
                "sizePolicyY": "Fixed",
                "default": "a-01",
                "id": "name"
            },
            {
                "type": "QLineEdit",
                "dataType": "int",
                "min": 0,
                "max": 10,
                "sizePolicyY": "Fixed",
                "id": "x"
            },
            {
                "type": "QPushButton",
                "text": "Click me",
                "specialType": "submit"
            }
        ]
    }
}