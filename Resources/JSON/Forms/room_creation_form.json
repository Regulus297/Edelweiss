{
    "type": "QWidget",
    "id": "RoomCreationForm",
    "onsubmit": "@netcode('FORM_SUBMITTED')",
    "windowTitle": "Create room",
    "layout": {
        "type": "QVBoxLayout",
        "children": [
            {
                "type": "QLineEdit",
                "sizePolicyY": "Fixed",
                "default": "a-01",
                "id": "name"
            },
            {
                "type": "QLineEdit",
                "dataType": "int",
                "sizePolicyY": "Fixed",
                "id": "x"
            },
            {
                "type": "QLineEdit",
                "dataType": "int",
                "sizePolicyY": "Fixed",
                "id": "y"
            },
            {
                "type": "QComboBox",
                "id": "colour",
                "items": ["0", "1", "2", "3", "4", "5", "6"]
            },
            {
                "type": "QPushButton",
                "text": "Click me",
                "specialType": "submit"
            }
        ]
    }
}